{% extends 'base.html.twig' %}

{% block title %}Hello ProductCatalogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { text-align: center; margin: 1em auto; max-width: 1600px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .example{ justify-content: space-around;}
    .images{ height: 90px; width: 130px;}
</style>

<div class="example-wrapper">
    <h1>Hello, you are seeing products from DB</h1>
    <div class="d-flex p-2 example">
    {% for product in products %}
    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center ">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
                <h4 class="my-0 fw-normal">{{ product.title }}</h4>
            </div>
            <div class="card-body">
                <a href="/catalog/{{ product.id }}"><img class="images" src='{{ product.adres }}' alt='img'></a>
                <h1 class="card-title pricing-card-title">${{ product.price }}</h1>
                <div>
                <p>{{ product.descrip }}</p>
                </div>
                <button type="button" class="w-100 btn btn-lg btn-outline-primary">Add To Cart</button>
            </div>
        </div>
      </div>
    </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
